
THIS IS A TEST PAGE
<h1>Sign in</h1>
<div div style="text-align: center">
    <div class="form-group">
        <input type="text" class="form-control" id="userEmail" name="loginId" placeholder="Email address" required>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" id="userPassword" name="password" placeholder="Password" required>
    </div>
    <br><br>
    <div class="row">
        <button id="login" class="button" onclick="onSubmit()">Login</button>
    </div>
</div>

<script>
    function onSubmit()
    {
        pass = document.getElementById('userPassword').value;
        email = document.getElementById('userEmail').value;

        let request = new XMLHttpRequest();
        request.open("POST", "/login", true);
        request.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
        request.setRequestHeader("withCredentials", true);
        request.setRequestHeader("username", email);
        request.setRequestHeader("password", pass);

        request.onreadystatechange = () =>
        {
          if (request.readyState === 4)
          {
              if (request.status === 401)
              {
                  alert("Invalid username or password");
              }
          }
        };
        request.send();

        console.log(request);
        console.log("login");
    }
</script>